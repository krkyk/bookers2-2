<div class="text-success">
  <%=render"layouts/message"%>
</div>
<div class="container">
  <%=render"layouts/error",obj:@book%>
  <div class="row">
    <div class="col-md-3 mt-2">
      <%=render"layouts/info",user:@user%>
      <%=render"layouts/form",book:@book%>
    </div>
    <div class="col-md-9">
      <h2 class="mt-2">Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <%@books.each do |book|%>
          <tr>
            <td>
              <%=link_to(user_path(@user.id))do%>
              <%=image_tag @user.get_profile_image(40,40)%>
              <%end%>
            </td>
            <td>
              <%=link_to book.title,book_path(book.id)%>
            </td>
            <td>
              <%=book.body%>
            </td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
