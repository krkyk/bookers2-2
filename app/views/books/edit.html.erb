<div class="container">
  <div class="row mt-2">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
    <h1>Editing Book</h1>
    <%=render"layouts/error",obj:@book%>
    <%=form_with model:@book,url:book_path(@book.id),method: :patch,local: true do |f|%>
    <div class="form-group">
      <%=f.label :Title,class:"book_title"%>
      <%=f.text_field :title,class:"form-control book_title"%>
    </div>
    <div class="form-group">
      <%=f.label :Opinion,class:"book_body"%>
      <%=f.text_area :body,class:"form-control book_body"%>
    </div>
    <div class="form-group">
      <%=f.submit"Update Book",class:"btn btn-sm btn-success mt-2"%>
    </div>
    <%end%>
    <%=link_to"Show",book_path(@book.id)%> | <%=link_to"Back",books_path%>
    </div>
  </div>
</div>
